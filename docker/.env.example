# DataHub Docker Environment Variables
# Copy this file to .env and modify as needed

# Base Path Configuration
# Set this to serve DataHub from a custom base path (e.g., "/datahub")
# Leave empty or comment out to serve from root path "/"
#DATAHUB_BASE_PATH=${DATAHUB_BASE_PATH}
#DATAHUB_GMS_BASE_PATH=${DATAHUB_GMS_BASE_PATH}

# DataHub Version
# Specify the DataHub version to deploy
DATAHUB_VERSION=head

# Port Mapping
# Customize the ports where DataHub services are exposed
DATAHUB_MAPPED_FRONTEND_PORT=9002
DATAHUB_MAPPED_GMS_PORT=8080

# Frontend Configuration
# Configure the frontend React application
DATAHUB_FRONTEND_IMAGE=acryldata/datahub-frontend-react

# GMS Configuration
# Configure the backend metadata service
DATAHUB_GMS_IMAGE=acryldata/datahub-gms

# Authentication
# Enable or disable authentication features
METADATA_SERVICE_AUTH_ENABLED=false

# DATAHUB_BASE_PATH example usage:
# 1. Copy this file: cp .env.example .env
# 2. Edit the variables as needed
# 3. Start DataHub: docker-compose -f docker-compose-without-neo4j.yml up -d
# 4. Access at: http://localhost:9002/datahub (if DATAHUB_BASE_PATH=${DATAHUB_BASE_PATH:-/})
